{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <div class="grid grid--1-col grid--2-col-tablet">
    <div class="grid__item">

      <div class="how-it-works__img">
        <img src="https://cdn.shopify.com/s/files/1/2141/7697/files/iPhone-12-Pro-1.png?v=1689068101" alt="" class="img-fluid" >

        <img src="https://cdn.shopify.com/s/files/1/2141/7697/files/iPhone-12-Pro_480x480.png?v=1689068123" alt="" class="img-fluid" >
        
      </div>

    </div>
    <div class="grid__item">


      <div class="how-it-works__text-description">

        <h3>HOW IT WORKS</h3>

        <ul>


          <li>FILL OUT 2-MINUTE STYLE QUIZ
            AND SHARE YOUR LOGOS</li>

          <li>
            APPROVE FREE CUSTOM DESIGNS
            FROM OUR GRAPHIC ART TEAM</li>

          <li>
            GET YOUR CUSTOM UNIT
            WEBSTORE, OPEN 24/7/365</li>

          <li>4
            PLACE ORDERS INDIVIDUALLY OR BUY IN BULK - NO MOQs</li>


        </ul>

        <a href="#" class="button button-primary">Get Started Now</a>

      </div>

    </div>
  </div>
</div>


{% schema %}
  {
    "name": "How It Works",
    "class": "how-it-works",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "How It works"

      }

    ]
  }
{% endschema %}