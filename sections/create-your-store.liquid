{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-image: url('{{'create-your-store.png' | file_url }}');
    background-size: cover;
    color: #fff;
    background-color: #000;
    min-height: calc(100vh - 100px);

  }

  .pop-up__logo img {
    max-width: 25rem;
    width: 100%;
  }
  .pop-up__logo {
    margin: 1.375rem 0 0;
  }

  .step-main-title {
    font-size: 1.6875rem;
    margin: 8px 0;
  }

  .step-main-desc {
    margin: 10px 0;
  }

  .step-main-desc small {
    font-size: 13px;
    color: #151415;
  }


  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .pop-up {
    background: #fff;
    color: #000;
    text-align: center;
    max-width: 46.875rem;
    width: 100%;

    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 4.5rem 4.5rem 2rem;
    z-index: 9;
  }

  .step-main-desc .button {
    margin: 1.375rem 0;
  }

  .arrow-red {
    position: absolute;
    left: -277px;
    bottom: 109px;
  }
{%- endstyle -%}

