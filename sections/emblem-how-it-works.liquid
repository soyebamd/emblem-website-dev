{%- style -%}
.iphone-1{
  width:430px;    margin-left: 240px;
    margin-top: 0;
}

.iphone-2{    width: 308px;
    position: absolute;
    top: 101px;
    left: 116px;}

    .circle {
    position: relative;
   
    float: left;
    margin: 0 16px 0px 0;
    clear: both;
    display: flex;
    width: 66px;
    height: 66px;
    padding: 10px 20px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    background: #B3341C;
    border-radius: 100px;
    color: #fff;
    font-family: Oswald, sans-serif;
    font-size: 32px;
    line-height: 129.7%;
    text-transform: uppercase;
}

    .how-it-works__text-description{ padding:23px 70px; }

    .how-it-works__text-description li {
      list-style:none;
      margin: 37px 0;
    }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <div class="grid grid--1-col grid--2-col-tablet">
    <div class="grid__item">

      <div class="how-it-works__img position-relative">
