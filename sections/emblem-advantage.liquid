{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}
    px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}
    px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}
      px;
      padding-bottom: {{ section.settings.padding_bottom }}
      px;
    }
  }


  .the {
    font-size: 0.5625em;
    position: relative;
    display: block;
    top: 0;
    left: 0;
  }
  .hide-logo-text img {
    float: left;
  }
  .hide-logo-text em {
    text-indent: -9999px;
    display: inline-block;
  }
  .adv {
    line-height: 42px;
    font-size: 1.5em;
    padding-left: 10px;
  }

  .advangae {
    background: #151415;
  }
  .heading-title {
    color: #fff;
    font-weight: normal;
    display: inline-block;
  }
  .advantage__list-items {
    color: #fff;
  }

  .advantage__list-items li {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-size: 1.5rem;
    margin: 6px 0;
    line-height: normal;
  }

  .advantage__sprite img {
    width: 3.0625rem;
  }

  .advantage__list-item {
    margin-left: 10px;
  }

  .advantage__footer h3 {
    margin-left: 100px;
    color: #fff;
  }


  @media(max-width:1000px) {
    .hide-logo-text img {

      width: 200px;
    }

    .heading-title {
      font-size: 3rem !important
    }
  }


  @media screen and (max-width: 750px) {

    .advantage__footer {
      flex-direction: column !important;
      margin-top: 50px;
      text-align: center;
    }

    .advantage__footer h3 {
      margin-left: 0;

    }

  }
{%- endstyle -%}


